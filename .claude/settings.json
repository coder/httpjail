{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cargo fmt"
          },
          {
            "type": "command",
            "command": "cargo clippy --all-targets -- -D warnings"
          }
        ]
      }
    ]
  }
}